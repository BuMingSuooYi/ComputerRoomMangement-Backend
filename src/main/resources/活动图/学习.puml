@startuml
start
:获取用户输入;
if (输入有效？) then (是)
  :处理有效输入;
  if (需要循环处理？) then (是)
    repeat
      :执行循环操作;
      if (循环条件满足？) then (是)
        fork
        :执行分支操作1;
        note left: 这是一个注释;
        :执行分支操作2;
        join
      else (否)
        :处理循环终止;
        break
      endif
    repeat while (继续循环？)
  else (否)
    fork
    :执行分支操作3;
    note right: 这是另一个注释;
    :执行分支操作4;
    join
  endif
  :执行后续操作;
else (否)
  :处理无效输入;
  if (重新输入？) then (是)
    -->获取用户输入;
  else (否)
    -->结束;
  endif
endif
end
@enduml
